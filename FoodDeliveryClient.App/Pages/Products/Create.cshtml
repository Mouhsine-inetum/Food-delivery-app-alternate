@page
@model FoodDeliveryClient.App.Pages.Products.CreateModel
@{
}


<div class="container-fluid px-1 py-5 mx-auto">
    <div class="row d-flex justify-content-center">
        <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
            <h3>Request a new store</h3>
            <p class="blue-text">Create a new store</p>
            <div class="card">
                <h5 class="text-center mb-4">Powering world-class companies</h5>
                <form class="form-card" onsubmit="OnPost" method="post">
                    <div class="row justify-content-between text-left">
                        <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label px-3">First name<span class="text-danger"> *</span></label> <input type="text" id="name" name="name" placeholder="Enter the name"> </div>
                        <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label px-3">Description<span class="text-danger"> *</span></label> <input type="text" id="description" name="description" placeholder="Enter the description"> </div>
                        <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label px-3">Price<span class="text-danger"> *</span></label> <input type="text" id="price" name="price" placeholder="Enter the Price"> </div>
                        <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label px-3">Quantity<span class="text-danger"> *</span></label> <input type="text" id="quantity" name="quantity" placeholder="Enter the quantity"> </div>
                        <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label px-3">Store<span class="text-danger"> *</span></label> <input type="text" id="storeId" name="storeId" placeholder="Enter the storeId"> </div>


                    </div>
                    <div class="row justify-content-end">
                        <br />
                        <div class="form-group col-sm-6"> <button type="submit" class="btn-block btn-primary">Request to create a store</button> </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
